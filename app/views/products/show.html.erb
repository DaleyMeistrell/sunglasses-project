<h1> <%= @product.name %> </h1>
           
     <div>Price: $<%= @product.price %></div>
     <div>Weight: <%= @product.weight %> lbs</div>
     <div>Inventory: <%= @product.inventory %> units</div>
     <div>Description: <%= @product.description %></div>
     <div>Category: <%= @product.category %></div>
     <div><%= image_tag @product.image.url(:large) %></div>


<div><%= link_to 'Edit', edit_product_path(@product.name) %></div>        
<div><%= link_to "Back to the list!", products_path %></div>
<div class="show-text"><%= link_to "Delete This Product", product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?"} %> </div>

